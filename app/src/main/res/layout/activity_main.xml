<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <EditText
            android:text="@string/m3u8Url"
            android:id="@+id/video_url_edit_text"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:hint="Please input video url"
            android:padding="10dp"
            android:lines="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/player_group"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <RadioButton
                android:checked="true"
                android:id="@+id/exo_play_btn"
                android:textSize="18sp"
                android:text="Exo播放器"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/ijk_play_btn"
                android:textSize="18sp"
                android:text="Ijk播放器"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/video_delete_btn"
            android:textSize="25sp"
            android:padding="20dp"
            android:text="删除缓存"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/video_play_btn"
            android:textSize="25sp"
            android:padding="20dp"
            android:text="Play"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        
        <CheckBox
            android:id="@+id/local_proxy_box"
            android:layout_marginTop="20dp"
            android:text="是否打开本地代理"
            android:textSize="18sp"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/okhttp_box"
            android:layout_marginTop="20dp"
            android:text="是否使用okhttp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>